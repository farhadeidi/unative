{
  "compilerOptions": {
    "jsx": "preserve",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["nativewind/types", "@types/node"],
    "baseUrl": "./src",
    "paths": {
      "@unative/universal": ["."],
      "@unative/universal/*": ["./*"] 
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
