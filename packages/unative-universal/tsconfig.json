{
  "compilerOptions": {
    "jsx": "preserve",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "types": ["nativewind/types", "@types/node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@unative/universal": ["."],
      "@unative/universal/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
