{
  "extends": "@repo/typescript-config/unative-library.json",
  "compilerOptions": {
    "types": ["nativewind/types", "@types/node"],
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "unative": ["."],
      "unative/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "rollup.config.js"]
}

